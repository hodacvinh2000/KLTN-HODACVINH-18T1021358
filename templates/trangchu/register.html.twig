<html lang="en"><head>
    <title>Login V4</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">

    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">

    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">

    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">

    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">

    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">

    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">

    <meta name="robots" content="noindex, follow">
<body>
<div class="limiter">
    <div class="container-login100" style="background-image: url('images/background-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" action="{{ path('register') }}" method="POST">
                <span class="login100-form-title p-b-49">
                Register
                </span>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Username is required">
                    <div>Username</div>
                    <input class="mt-2" type="text" name="username" placeholder="Type your username">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Password is required">
                    <div>Password</div>
                    <input class="mt-2" type="password" name="password" placeholder="Type your password">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Password is required">
                    <div>Confirm password</div>
                    <input class="mt-2" type="password" name="confirmPassword" placeholder="Retype your password">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Your name is required">
                    <div>Your name</div>
                    <input class="mt-2" type="text" name="name" placeholder="Type your name">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Your birthday is required">
                    <div>Birthday</div>
                    <input class="mt-2" type="date" name="birthday">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Your email is required">
                    <div>Email</div>
                    <input class="mt-2" type="email" name="email" placeholder="Type your email">
                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Your phone is required">
                    <div>Phone</div>
                    <input class="mt-2" type="text" name="phone" placeholder="Type your phone">
                </div>
                <div class="form-group m-b-23" data-validate="Your phone is required">
                    <div>Sex</div>
                    <select class="mt-2 form-control" style="width: 25%;" name="sex">
                        <option>Nam</option>
                        <option>Ná»¯</option>
                    </select>
                </div>
                <div class="text-right p-t-8 p-b-31">
                    <span>
                        You have account ?
                        <a href="{{ path('login_user') }}">
                            Login
                        </a>
                    </span>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Register
                        </button>
                    </div>
                </div>>
            </form>
        </div>
    </div>
</div>
<div id="dropDownSelect1"></div>
{% if message != "" %}
    <script>
        window.onload = function () {
            alert("{{ message }}")
        }
    </script>
{% endif %}
</body></html>