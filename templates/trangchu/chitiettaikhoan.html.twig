{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div style="position: relative; top:30px; left: 50px;">
            <a href="{{ path('buy_account',{id:account.id}) }}"><button class="btn btn-warning btn-outline-dark">Mua tài khoản</button></a>
        </div>
        <h2 align="center" style="margin-top: -10px;">Thông tin tài khoản</h2>
        <div class="account-description">
            <p><b>Ingame:</b> {{ account.ingame }}</p>
            <p><b>Giá:</b> {{ account.gia }}</p>
            <p><b>Mô tả:</b> {{ account.description }}</p>
        </div>
        <div class="container-fluid" style="margin: 20px 0px;">
            <div class="row">
                {% for anh in list_anh %}
                <div class="col-12 col-md-6 col-lg-4">
                    <img src="{{ anh.link }}" style="width: 100%; height: 300px;">
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% if non_vertical %}
        <script>
            $(document).ready(function () {
                alert("Tài khoản của bạn chưa được kích hoạt. Vui lòng kích hoạt để mua tài khoản game!");
            })
        </script>
    {% endif %}
    {% if message != "" %}
        <script>
            $(document).ready(function () {
                alert("{{ message }}");
            })
        </script>
    {% endif %}
{% endblock %}