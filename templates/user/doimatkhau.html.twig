{% extends 'base.html.twig' %}

{% block title %}Đổi mật khẩu{% endblock %}

{% block body %}
    <div class="change_password_form content">
        <form style="width: 30%; margin: 20px auto;" method="post" action="{{ path('change_password') }}">
            <div class="form-group">
                <label for="old_password">Mật khẩu cũ:</label>
                <input type="password" name="old_password" id="old_password" class="form-control"><i class="fas fa-eye" onclick="show_hide('old_password')"></i>
            </div>
            <div class="form-group">
                <label for="new_password1">Mật khẩu mới:</label>
                <input type="password" name="new_password1" id="new_password1" class="form-control"><i class="fas fa-eye" onclick="show_hide('new_password1')"></i>
            </div>
            <div class="form-group">
                <label for="new_password2">Nhập lại mật khẩu:</label>
                <input type="password" name="new_password2" id="new_password2" class="form-control"><i class="fas fa-eye" onclick="show_hide('new_password2')"></i>
            </div>
            <button type="submit" class="btn btn-dark">Đổi mật khẩu</button>
        </form>
    </div>
    {% if message != "" %}
        <script>
            $(document).ready(function () {
                alert("{{ message }}");
            })
        </script>
    {% endif %}
    <script>
        function show_hide(id) {
            let input = $('#'+id);
            if (input.attr('type') == 'password') input.attr('type','text');
            else input.attr('type','password');
        }
    </script>
{% endblock %}