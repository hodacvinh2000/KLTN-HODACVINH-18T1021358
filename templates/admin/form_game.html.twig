    {% extends 'base-admin.html.twig' %}

{% block title %}Trang quản lý game{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin-main.css') }}" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin-game.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {% if game != null %}
        <div class="top nav-bar">
            <h3 align="center">Cập nhật Game</h3>
        </div>
        <div class="edit-form">
            <form method="post" action="" style="width: 60%; margin: auto;">
                <div class="form-group">
                    <label for="tengame">Tên game</label>
                    <input type="text" name="tengame" id="tengame" class="form-control" value="{{ game.tengame }}" required>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    {% else %}
        <div class="top nav-bar">
            <h3 align="center">Thêm Game</h3>
        </div>
        <div class="edit-form">
            <form method="post" action="" style="width: 60%; margin: auto;">
                <div class="form-group">
                    <label for="tengame">Tên game</label>
                    <input type="text" name="tengame" id="tengame" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success">Thêm</button>
            </form>
        </div>
    {% endif %}
    {% if message != "" %}
        <script>
            alert('{{ message }}');
        </script>
    {% endif %}
{% endblock %}
