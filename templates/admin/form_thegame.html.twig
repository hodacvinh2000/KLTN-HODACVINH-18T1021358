{% extends 'base-admin.html.twig' %}

{% block title %}Trang quản lý thẻ game{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin-main.css') }}" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin-thegame.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {% if thegame != null %}
        <div class="top nav-bar">
            <h3 align="center">Cập nhật thẻ Game</h3>
        </div>
        <div class="edit-form">
            <form method="post" action="" style="width: 60%; margin: auto;">
                <div class="form-group">
                    <label for="game_id">Game</label>
                    <select name="game_id" id="game_id" class="form-control">
                        <option value="{{ thegame.game.id }}" selected>{{ thegame.game.tengame }}</option>
                        {% for game in list_game %}
                            {% if game.id != thegame.game.id %}
                                <option value="{{ game.id }}">{{ game.tengame }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="seri">Số seri</label>
                    <input type="text" name="seri" value="{{ thegame.seri }}" class="form-control" id="seri" required>
                </div>
                <div class="form-group">
                    <label for="cardnumber">Mã số thẻ</label>
                    <input type="text" name="cardnumber" value="{{ thegame.cardnumber }}" id="cardnumber" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="gia">Mệnh giá</label>
                    <input type="number" min="0" name="gia" id="gia" class="form-control" value="{{ thegame.gia }}" required>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    {% else %}
        <div class="top nav-bar">
            <h3 align="center">Thêm thẻ Game</h3>
        </div>
        <div class="edit-form">
            <form method="post" action="" style="width: 60%; margin: auto;">
                <div class="form-group">
                    <label for="game_id">Game</label>
                    <select name="game_id" id="game_id" class="form-control">
                        {% for game in list_game %}
                            <option value="{{ game.id }}">{{ game.tengame }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="seri">Số seri</label>
                    <input type="text" name="seri" id="seri" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="cardnumber">Mã số thẻ</label>
                    <input type="text" name="cardnumber" class="form-control" id="cardnumber" required>
                </div>
                <div class="form-group">
                    <label for="gia">Mệnh giá</label>
                    <input type="number" min="0" name="gia" id="gia" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success">Thêm</button>
            </form>
        </div>
    {% endif %}
    {% if message != "" %}
        <script>
            window.onload = function () {
                alert('{{ message }}');
            }
        </script>
    {% endif %}
{% endblock %}
